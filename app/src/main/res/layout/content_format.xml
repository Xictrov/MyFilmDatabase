<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:id="@+id/titleR"
        android:text="Title"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:textSize="18sp"
        android:maxWidth="250dp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:id="@+id/yearR"
        android:text="Year"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:textSize="18sp"
        android:maxWidth="250dp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:id="@+id/countryR"
        android:text="Country"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:textSize="18sp"
        android:maxWidth="250dp"
        android:textColor="#000"
        android:layout_alignBaseline="@+id/directorR"
        android:layout_alignBottom="@+id/directorR"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:id="@+id/protagonistR"
        android:text="Protagonist"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/countryR"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/directorR"
        android:text="Director"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:textSize="18sp"
        android:maxWidth="250dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/yearR"
        android:layout_alignEnd="@+id/yearR" />

    <ImageButton
        android:id="@+id/deleteB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_24dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignTop="@+id/protagonistR"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5px"
        android:background="#C0C0C0"/>

    <RatingBar
        android:id="@+id/ratingR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="0.5"
        android:theme = "@style/RatingBar"
        android:numStars="5"
        android:isIndicator="false"
        style = "@android:style/Widget.Material.Light.RatingBar.Small"
        android:layout_alignBottom="@+id/deleteB"
        android:layout_centerHorizontal="true" />

</RelativeLayout>